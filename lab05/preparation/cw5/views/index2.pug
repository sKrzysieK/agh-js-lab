doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Second Express application
        style.
            table {
                width: 100%;
            }
            td {
                border: 1px solid #000; 
                padding: 15px;
                text-align: left;
            }
            th {
                background-color: #04AA6D;
                color: white;
            }
    body
        main
            h1 Second Express application
            table
                tr
                    th Nazwisko
                    th Imię
                    th Wydział
                each student in students
                    tr
                        td= student.lname
                        td= student.fname
                        if faculty
                        td= student.faculty

                        